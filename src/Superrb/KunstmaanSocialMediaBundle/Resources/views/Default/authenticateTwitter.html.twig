{% extends 'KunstmaanAdminBundle:Default:layout.html.twig' %}
{% form_theme form 'KunstmaanAdminBundle:Form:fields.html.twig' %}

{% block content %}
    <form action="{{ url('superrbkunstmaansocialmediabundle_admin_social_authenticate_twitter') }}" method="post" {{ form_enctype(form) }}>
        <fieldset class="form__fieldset--padded">

            {% if isAuthenticated %}
                <p>Your account is currently <strong>authenticated</strong> and <strong>logged in</strong>.</p>
            {% else %}
                <p>Use this page to generate an access token to allow this website access to Twitter.</p>
                <p>You will need to set up the Twitter App. Apps can be set up at <a href="https://apps.twitter.com" target="_blank">https://apps.twitter.com</a></p>
            {% endif %}

            {{ form_widget(form) }}
            <input type="submit" value="{% if isAuthenticated %}Update Twitter Details{% else %}Log in to Twitter{% endif %}">
        </fieldset>
    </form>
{% endblock content %}