{% extends 'KunstmaanAdminBundle:Default:layout.html.twig' %}
{% form_theme form 'KunstmaanAdminBundle:Form:fields.html.twig' %}

{% block content %}
    <form action="{{ url('superrbkunstmaansocialmediabundle_admin_social_authenticate_vimeo') }}" method="post" {{ form_enctype(form) }}>
        <fieldset class="form__fieldset--padded">

            {% if isAuthenticated %}
                <p>Your account is currently <strong>authenticated</strong> and <strong>logged in</strong>.</p>
            {% else %}
                <p>Use this page to generate an access token to allow this website access to Vimeo.</p>
                <p>Your redirect URL is: <strong>{{ redirectUrl }}</strong>, you will need this to set up the Vimeo App. Apps can be set up at <a href="https://developer.vimeo.com/apps" target="_blank">https://developer.vimeo.com/apps</a></p>
            {% endif %}

            {{ form_widget(form) }}
            <input type="submit" value="{% if isAuthenticated %}Update Vimeo Details{% else %}Log in to Vimeo{% endif %}">
        </fieldset>
    </form>
{% endblock content %}